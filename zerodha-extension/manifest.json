{
    "manifest_version": 3,
    "version": "1.0.0",
    "name": "zerodha extension",
    "icons": {
        "512": "kite-logo.png"
    },
    "background": {
        "service_worker": "service_worker.js",
        "type": "module"
    },
    "action": {
        "default_popup": "popup.html",
        "default_title": "Kite Helper"
    },
    "permissions": [
        "tabs",
        "activeTab",
        "scripting"
    ],
    "host_permissions": [
        "http://*/*",
        "https://*/*"
    ],
    "content_scripts": [
        {
            "matches": ["https://kite.zerodha.com/*"],
            "js": ["content-utils.js", "content.js", "libs/pages/positions.js", "libs/pages/holdings.js"],
            "css": ["libs/bootstrap.min.css", "content.css", "libs/pages/positions.css", "libs/pages/holdings.css" ]
        }
    ],
    "web_accessible_resources": [{
        "resources": ["libs/*"],
        "matches": ["<all_urls>"]
  }]
}